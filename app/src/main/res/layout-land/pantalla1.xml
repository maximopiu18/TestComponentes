<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:weightSum="100"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="right"
    android:background="#00FFA1"
    android:gravity="right"
    >

    <LinearLayout
        android:layout_weight="50"
        android:weightSum="100"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:tint="#ffffff"
            android:padding="?attr/actionBarSize"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_android_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:weightSum="100"
        android:orientation="vertical"
        android:layout_weight="50"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:weightSum="100"
            android:background="#00FFA1"            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">


            <TextView
                android:textSize="28dp"
                android:layout_margin="16dp"
                android:gravity="center|right"
                android:hint="resultado"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:weightSum="100"
            android:background="#F44336"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="1"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="2"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="3"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="+"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:weightSum="100"
            android:background="#F44336"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="4"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="5"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="6"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="-"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:weightSum="100"
            android:background="#F44336"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="7"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="8"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="9"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="X"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>
        <LinearLayout
            android:weightSum="100"
            android:background="#F44336"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="C"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="0"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="="
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>
            <Button
                android:textStyle="bold"
                android:textSize="28dp"
                android:text="/"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent">

            </Button>

        </LinearLayout>
    </LinearLayout>






</LinearLayout>